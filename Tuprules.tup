.gitignore

&INCDIR = inc

CC = clang
AR = llvm-ar
CFLAGS += -Wall
CFLAGS += -Wextra
CFLAGS += -Wpedantic
CFLAGS += -Werror=implicit-function-declaration
CFLAGS += -std=c99
CFLAGS += -g3

!cc = |> ^j^ $(CC) $(CFLAGS) -I &(INCDIR) -c %f -o %o |> %B.o
!ld = |> $(CC) $(LDFLAGS) %f -o %o $(LIBS) |>
!ar = |> $(AR) rcs %o %f |>
