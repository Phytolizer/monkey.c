.gitignore

&INCDIR = inc

CC = gcc

CFLAGS += -Wall
CFLAGS += -Wextra
CFLAGS += -Wpedantic
CFLAGS += -Werror=implicit-function-declaration
CFLAGS += -std=c99
CFLAGS += -g3
CFLAGS += -fsanitize=address,undefined

LDFLAGS += -fsanitize=address,undefined

!cc = |> ^j^ $(CC) $(CFLAGS) -I &(INCDIR) -c %f -o %o |> %B.o
!ld = |> $(CC) $(LDFLAGS) %f -o %o -L. $(LIBS) |>
!ar = |> ar rcs %o %f |>
